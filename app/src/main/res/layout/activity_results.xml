<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guidline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <TextView
        android:id="@+id/results_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidline1"
        tools:text="Your Score" />

    <TextView
        android:id="@+id/result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/results_score_label"
        app:layout_constraintStart_toStartOf="@+id/results_score_label"
        app:layout_constraintTop_toBottomOf="@+id/results_score_label"
        tools:text="5" />

    <Button
        android:id="@+id/result_play_again"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="@string/play_again_text"
        app:layout_constraintEnd_toEndOf="@+id/results_score_label"
        app:layout_constraintStart_toStartOf="@+id/results_score_label"
        app:layout_constraintTop_toBottomOf="@+id/result_score" />


    <Button
        android:id="@+id/result_main_menu"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="Back to Main Menu"
        app:layout_constraintEnd_toEndOf="@+id/results_score_label"
        app:layout_constraintStart_toStartOf="@+id/results_score_label"
        app:layout_constraintTop_toBottomOf="@+id/result_play_again" />

</android.support.constraint.ConstraintLayout>